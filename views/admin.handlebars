            </div>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="collapse mt-5 mx-5" id="fridayCollapse" role="tabpanel">
      <div class="card card-body">
        <h2 class=>Friday</h2>
        <div class="row">
          {{#each fridayNames}}
            <div class="col-md-3 col-lg-2 mt-4">
              <li id="names">{{this}}</li>
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="collapse mt-5 mx-5" id="saturdayCollapse" role="tabpanel">
      <div class="card card-body">
        <h2 class="display-6">Saturday</h2>
        <div class="row">
          {{#each saturdayNames}}
            <div class="col-md-3 col-lg-2 mt-4">
              <li id="names">{{this}}</li>
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="collapse mt-5 mx-5" id="sundayCollapse" role="tabpanel">
      <div class="card card-body">
        <h2 class="display-6">Sunday</h2>
        <div class="row">
          {{#each sundayNames}}
            <div class="col-md-3 col-lg-2 mt-4">
              <li id="names">{{this}}</li>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </body>
  </html>
  <form class="reset" action="/admin/resetWaiters" method="post">
    <p>For new roaster update</p>
    <input type="submit" name="name" value="Reset">
  </form>
